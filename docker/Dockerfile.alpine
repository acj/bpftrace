ARG ALPINE_VERSION="edge"
ARG LLVM_VERSION="10"

FROM alpine:${ALPINE_VERSION}

RUN apk add --update \
  bash \
  bison \
  bcc-dev \
  bcc-static \
  libbpf-dev \
  build-base \
  clang-dev \
  clang-static \
  cmake \
  libelf-static \
  flex-dev \
  git \
  gtest-dev \
  libc6-compat \
  linux-headers \
  llvm${LLVM_VERSION}-dev \
  llvm${LLVM_VERSION}-static \
  python3 \
  zlib \
  zlib-dev \
  zlib-static

#RUN apk del bcc libelf zlib

WORKDIR /

RUN ln -s $(which python3) /usr/bin/python && \
    ln -s /lib /lib/x86_64-linux-gnu

COPY build.sh /build.sh
RUN chmod 755 /build.sh
ENTRYPOINT ["/bin/sh", "/build.sh"]
